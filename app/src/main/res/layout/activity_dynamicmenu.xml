<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dynamicmenu_textview_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@android:color/darker_gray"
        android:textAlignment="center"
        android:textSize="24sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dynamicmenu_container_menu"/>

    <LinearLayout
        android:id="@+id/dynamicmenu_container_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@+id/dynamicmenu_textview_menu"
        app:layout_constraintBottom_toTopOf="@+id/dynamicmenu_textview_result">
    </LinearLayout>

    <TextView
        android:id="@+id/dynamicmenu_textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        app:layout_constraintTop_toBottomOf="@+id/dynamicmenu_container_menu"/>

</android.support.constraint.ConstraintLayout>